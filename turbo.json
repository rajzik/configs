{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["SYSTEM_TASKDEFINITIONSURI", "NODE_ENV"],
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "lib/**", "dts/**"]
    },
    "format": {
      "outputLogs": "new-only",
      "outputs": [".cache/.prettiercache"]
    },
    "clean": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^topo"],
      "outputs": [".cache/.eslintcache"]
    },
    "test": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^topo"],
      "outputs": [".cache/tsbuildinfo.json"]
    }
  }
}
