{
  "name": "configs-root",
  "version": "0.0.0",
  "private": true,
  "description": "personal sharable configs",
  "homepage": "https://github.com/rajzik/configs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rajzik/configs.git"
  },
  "license": "MIT",
  "author": "Jan Å ilhan <silhanu@gmail.com>",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "changeset": "changeset",
    "changeset:beta": "changeset pre enter beta",
    "changeset:canary": "changeset pre enter canary",
    "check-eslint-deprecations": "eslint-find-rules --deprecated .eslintrc.js",
    "clean": "git clean -xdf .cache dist dts .turbo node_modules",
    "clean:workspaces": "turbo run clean",
    "create-changeset": "pnpm dlx changeset",
    "find-unused-eslint-rules": "pnpm workspace eslint-config-rajzik run check-rules",
    "format": "turbo format --continue",
    "format:fix": "turbo format --continue -- --write",
    "lint": "turbo lint --continue",
    "lint:fix": "turbo lint --continue -- --fix",
    "lint:ws": "pnpm dlx sherif@latest",
    "prepare": "pnpm build",
    "release": "changeset publish",
    "release:canary": "changeset publish --snapshot --no-git-tag --tag canary",
    "test": "turbo test",
    "test:all": "pnpm run lint:ws && turbo run test lint format typecheck --continue",
    "test:fix": "turbo test -- -u",
    "typecheck": "turbo typecheck",
    "version": "changeset version",
    "version:canary": "changeset version --snapshot canary"
  },
  "prettier": "@rajzik/prettier-config",
  "devDependencies": {
    "@changesets/changelog-github": "0.5.2",
    "@changesets/cli": "2.29.8",
    "@changesets/get-github-info": "0.7.0",
    "@changesets/get-release-plan": "4.0.14",
    "@changesets/types": "6.1.0",
    "@commitlint/cli": "20.2.0",
    "@rajzik/danger-configuration": "workspace:*",
    "@rajzik/eslint-config": "workspace:*",
    "@rajzik/prettier-config": "workspace:*",
    "@rajzik/tsconfig": "workspace:*",
    "cross-env": "10.1.0",
    "danger": "13.0.5",
    "eslint": "catalog:",
    "eslint-find-rules": "5.0.0",
    "prettier": "catalog:",
    "turbo": "2.7.1",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.26.1"
}
