{
  "name": "configs-root",
  "version": "0.0.0",
  "private": true,
  "description": "personal sharable configs",
  "repository": "git@github.com:rajzik/configs.git",
  "license": "MIT",
  "author": "Jan Å ilhan <silhanu@gmail.com>",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "check-eslint-deprecations": "eslint-find-rules --deprecated .eslintrc.js",
    "clean": "git clean -xdf .cache dist dts .turbo node_modules",
    "clean:workspaces": "turbo run clean",
    "find-unused-eslint-rules": "pnpm workspace eslint-config-rajzik run check-rules",
    "format": "turbo format --continue",
    "format:fix": "turbo format --continue -- --write",
    "lint": "turbo lint --continue",
    "lint:fix": "turbo lint --continue -- --fix",
    "lint:ws": "pnpm dlx sherif@latest",
    "prepare": "pnpm build",
    "test": "turbo test",
    "test:all": "pnpm run lint:ws && turbo run test lint format typecheck --continue",
    "test:fix": "turbo test -- -u",
    "typecheck": "turbo typecheck"
  },
  "prettier": "@rajzik/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@monodeploy/plugin-github": "^2.0.2",
    "@rajzik/eslint-config": "workspace:*",
    "@rajzik/prettier-config": "workspace:*",
    "@rajzik/tsconfig": "workspace:*",
    "cross-env": "^7.0.3",
    "danger": "^13.0.4",
    "eslint": "catalog:",
    "eslint-find-rules": "^5.0.0",
    "monodeploy": "^5.0.2",
    "prettier": "catalog:",
    "turbo": "^2.5.4",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.11.1+sha512.e519b9f7639869dc8d5c3c5dfef73b3f091094b0a006d7317353c72b124e80e1afd429732e28705ad6bfa1ee879c1fce46c128ccebd3192101f43dd67c667912"
}
